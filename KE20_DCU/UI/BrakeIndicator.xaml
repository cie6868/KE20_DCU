<UserControl
    x:Class="KE20_DCU.UI.BrakeIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="DarkRed" Visibility="{x:Bind BoolToVisibility(Output.BrakePressed), Mode=OneWay}">
        <Viewbox>
            <TextBlock Text="BRAKE" Foreground="White"/>
        </Viewbox>
    </Grid>
</UserControl>
