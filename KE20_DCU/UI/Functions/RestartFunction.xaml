<UserControl
    x:Class="KE20_DCU.UI.Functions.RestartFunction"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fa="using:FontAwesome.UWP"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Button Click="Button_Click" HorizontalAlignment="Stretch">
        <Grid Padding="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="0">
                <fa:FontAwesome Grid.Row="0" Icon="Refresh"/>
            </Viewbox>

            <Viewbox Grid.Row="1">
                <TextBlock Grid.Row="1">Reboot</TextBlock>
            </Viewbox>

        </Grid>
    </Button>
    
</UserControl>
