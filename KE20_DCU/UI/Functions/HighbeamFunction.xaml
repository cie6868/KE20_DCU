<UserControl
    x:Class="KE20_DCU.UI.Functions.HighbeamFunction"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:fa="using:FontAwesome.UWP"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ToggleButton x:Name="btn" IsChecked="{x:Bind Output.Highbeam, Mode=OneWay}" Click="btn_Click" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="0">
                <Image Source="/Assets/Dashboard/high-beam.png"/>
            </Viewbox>
            
            <Viewbox Grid.Row="1">
                <TextBlock Grid.Row="1">Highbeam</TextBlock>
            </Viewbox>
            
        </Grid>
    </ToggleButton>
</UserControl>
